<li>
  {{question.name}} {{question.content}}
  {{#if isImageShowing }}
    <p><img src={{question.image}} alt={{question.content}} {{action 'imageHide'}}></p>
  {{else}}
    <button {{action 'imageShow'}}>Show Image</button>
  {{/if}}

  {{edit-question question=question edit="edit"}}

  <button {{action 'delete' question}}>Delete Question</button>
</li>
